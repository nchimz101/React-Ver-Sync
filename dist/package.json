{
  "name": "versynch",
  "version": "1.0.0",
  "description": "Force update and synchronize versions for React apps using cache busting and service worker management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint .",
    "prepublishOnly": "npm run build && cp README.md LICENSE dist/",
    "publish-patch": "npm version patch && npm publish",
    "publish-minor": "npm version minor && npm publish",
    "publish-major": "npm version major && npm publish"
  },
  "keywords": [
    "pwa",
    "cache",
    "react",
    "service-worker",
    "update",
    "cache-clearing",
    "versioning",
    "auto-update",
    "legacy-support",
    "react-hooks"
  ],
  "author": "Nchimunya Munyama",
  "license": "MIT",
  "type": "commonjs",
  "homepage": "https://github.com/nchimz101/React-Ver-Sync#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nchimz101/React-Ver-Sync.git"
  },
  "bugs": {
    "url": "https://github.com/nchimz101/React-Ver-Sync/issues"
  },
  "dependencies": {
    "@types/node": "^20.11.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
